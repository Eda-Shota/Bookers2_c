<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td>
          <%= link_to(group) do %>
          <%= image_tag group.get_group_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to group.name, group, class: "group_#{group.id}" %></td>
        <td><%= group.introduction %></td>
        <td><%= link_to "Edit", edit_group_path(group.id), class: "group_#{group.id} btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>